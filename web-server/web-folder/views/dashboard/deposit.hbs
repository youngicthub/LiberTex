  <script>
    document.getElementById("openModal").addEventListener("click", (e) => {
      document.getElementById("tsxModal").style.display = "block";
    });
    document.getElementById("close").addEventListener("click", (e) => {
      document.getElementById("tsxModal").style.display = "none";
    });
    document.getElementById("close2").addEventListener("click", (e) => {
      document.getElementById("tsxModal").style.display = "none";
    });

    const paramURL = new URLSearchParams(window.location.search)

    let status = paramURL.get("status")
    if (status === "created") {
      //Amount Selected Make your Payment Below
      Swal.fire(
        'Almost there!',
        'Transaction created. Make your payment below',
        'warning'
      )

      window.history.pushState({}, "", "/deposit");
    }


    // Check the buttons
    let transactionsBtn = document.querySelectorAll(".tb_btn")
    for (i = 0; i < transactionsBtn.length; i++) {
      if (transactionsBtn[i].id === "pending") {
        transactionsBtn[i].textContent = "Make payment"
        transactionsBtn[i].classList.add("make_payment_style")
        transactionsBtn[i].addEventListener("click", e => {
          let id = e.target.getAttribute("_id")
          location.href = "/payment?_id=" + id
        })

      }
       else {
        transactionsBtn[i].textContent = "View"
        transactionsBtn[i].classList.add("view_style")
        transactionsBtn[i].addEventListener("click", e => {
          let id = e.target.getAttribute("_id")
          location.href = "/payment?_id=" + id
        })

      }
    }



  </script>

