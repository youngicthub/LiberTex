    <script>
        let submitBtn = document.querySelectorAll("#submitBtn")


        let balanceInput = document.getElementById("balanceInput")
        let profitInput = document.getElementById("profitInput")
        let bonusInput = document.getElementById("bonusInput")
        let _IDInput = document.getElementById("_IDInput")
        let tsxModal = document.getElementById("tsxModal")

        document.getElementById("close2").addEventListener("click", (e) => {
            document.getElementById("tsxModal").style.display = "none";
        });

        for (i = 0; i < submitBtn.length; i++) {
            submitBtn[i].addEventListener("click", e => {
                tsxModal.style.display = "block"
                let balance = e.target.getAttribute("data-balance")
                let profit = e.target.getAttribute("data-profit")
                let bonus = e.target.getAttribute("data-bonus")
                let _id = e.target.getAttribute("data-id")


                balanceInput.value = balance
                profitInput.value = profit
                bonusInput.value = bonus
                _IDInput.value = _id


            })
        }

