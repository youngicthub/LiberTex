                        </div>
                    </div>
                </div>
            </div>


            <div class="transaction_column">
                <table>
                    <h2 style="text-align: center;">Withdrawal</h2>
                    <tr>
                        <td>Email</td>
                        <td>Amount</td>
                        <td>Date</td>
                        <td>Method</td>
                        <td>Account/Wallet</td>
                        <td>Status</td>
                        <td>Approve</td>
                        <td>Cancel</td>
                    </tr>

                    {{#each transaction}}
                    <tr>
                        <td>{{email}}</td>
                        <td>{{amount}}</td>
                        <td>{{date}}</td>
                        <td>{{method}}</td>
                        <td>{{wallet_account_number}}</td>
                        <td>{{status}}</td>
                        <td>
                            <a href="/approve-page/{{owner}}/{{_id}}">
                                <button style="cursor: pointer;">Approve</button>
                            </a>
                        </td>
                        <td>
                            <a href="/cancel-withdraw/?transactionId={{_id}}">
                                <button style="cursor: pointer;">Cancel</button>
                            </a>
                        </td>
                    </tr>
                    {{/each}}

                </table>
            </div>


